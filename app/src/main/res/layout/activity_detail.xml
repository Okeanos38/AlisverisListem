<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnDuzenle"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btnDDurum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:textSize="18dp"
        android:background="@drawable/butonbackground"
        android:fontFamily="serif"
        android:textColor="@color/white"
        android:text="Düzenle" />

    <EditText
        android:id="@+id/txtDBaslik"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp"
        android:gravity="center_vertical"
        android:background="@drawable/edittext"
        android:ems="10"
        android:padding="12dp"
        android:hint="Ürün İsmi"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtDAciklama"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/txtDBaslik"
        android:layout_below="@+id/txtDBaslik"
        android:layout_marginTop="21dp"
        android:gravity="center_vertical"
        android:background="@drawable/edittext"
        android:ems="10"
        android:padding="12dp"
        android:hint="Açıklama"
        android:inputType="textMultiLine" />

    <ToggleButton
        android:id="@+id/btnDDurum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtDAciklama"
        android:layout_alignStart="@+id/txtDAciklama"
        android:layout_below="@+id/txtDAciklama"
        android:layout_marginTop="19dp"
        android:checked="false"
        android:textOff="Aktif"
        android:textOn="Tamamlandı" />

    <TextView
        android:id="@+id/txtDTarih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif-black"
        android:textSize="20dp"
        android:layout_below="@+id/btnDDurum"
        android:layout_marginTop="19dp"
        android:gravity="center"
        android:text="Tarih" />

</RelativeLayout>